#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

install() {
  case $(_os) in
    macos) brew install docker docker-compose
           ;;
    arch)  sudo pacman --needed --noconfirm -S docker docker-compose ;;
    # debian) sudo apt-get install -y docker docker-compose ;; FIXME
  esac
}

