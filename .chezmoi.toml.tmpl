{{- $headless := false -}}
{{- $hostname := .chezmoi.hostname -}}
{{- $transient := false -}}
{{- $work := false -}}

{{- $browser := get . "browser" -}}
{{- if not $browser -}}
{{- $browser = promptString "browser" -}}
{{- end -}}

{{- $pwm := get . "pwm" -}}
{{- if not $pwm -}}
{{- $pwm = promptString "pwm" -}}
{{- end -}}

{{- $node := true -}}
{{- $python := true -}}
{{- $ruby := false -}}
{{- if (hasKey . "ruby") -}}
{{-   $ruby = get . "ruby" -}}
{{- end -}}

{{- $editor := get . "editor" -}}
{{- if not $editor -}}
{{- $editor = promptString "editor" -}}
{{- end -}}

{{- $beets := false -}}
{{- $ffmpeg := false -}}

{{- $docker := false -}}
{{- if (hasKey . "docker") -}}
{{-   $docker = get . "docker" -}}
{{- end -}}

{{- $term := "iterm" -}}

{{- if eq .chezmoi.hostname "x86" -}}
  {{ $work = true }}
{{- end -}}

{{- if and (not $work) (not $transient) -}}
  {{ $beets = true }}
  {{- if (hasKey . "beets") -}}
  {{-   $beets = get . "beets" -}}
  {{- end -}}
  {{ $ffmpeg = true }}
  {{- if (hasKey . "ffmpeg") -}}
  {{-   $ffmpeg = get . "ffmpeg" -}}
  {{- end -}}
{{- end -}}

[data]
  browser = "{{ $browser }}"
  editor = "{{ $editor }}"
  headless = "{{ $headless }}"
  hostname = "{{ $hostname }}"
  pwm = "{{ $pwm }}"
  term = "{{ $term }}"
  transient = {{ $transient }}
  work = {{ $work }}
  vault = "c34opqgbm2gkddnmfozm5b7fye"
  work_vault = "lwzrvehn7zf5tdmdvalxgpe5ry"
[data.languages]
  node = {{ $node }}
  python = {{ $python }}
  ruby = {{ $ruby }}
[data.misc]
  beets = {{ $beets }}
  docker = {{ $docker }}
  ffmpeg = {{ $ffmpeg }}